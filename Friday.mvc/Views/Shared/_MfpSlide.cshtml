@using Friday.mvc.Models
@model MainModel
<div class="mfpSlide" id="J_MfpSlide" data-spm="3.362490.296814">
    <ul class="mfpSlide-con">
        @for (var index = 0; index < (Model.Activities.Count() > 5 ? 5 : Model.Activities.Count()); index++)
        {

            var item = Model.Activities.ElementAt(index);
            <li data-image="@item.Image">
                <div class="mSc-main">
                @if (item.SubImage != "")
                {
                    <b class="mScm-text1">
                        <img src="@item.SubImage" width="760" height="210">
                    </b> 
                }
                @if (!string.IsNullOrEmpty(item.Description))
                {
                    <a class="mScm-link" href="http://www.linjuzaixian.com/Merchant/index?scid=@item.Description"
                            title="@item.Name" data-spm="d1"></a>
                }
                    else
                    {
                    <a class="mScm-link" href="http://www.linjuzaixian.com/Merchant/SearchProduct?cat=@item.Matters"
                            title="@item.Name" data-spm="d1"></a>
                }
                </div>
            </li>
              
        }
         
    </ul>
    <ul class="mfpSlide-nav" style="">
        @for (var index = 0; index < (Model.Activities.Count() > 5 ? 5 : Model.Activities.Count()); index++)
        {
            <li></li>
        }
    </ul>
</div>
